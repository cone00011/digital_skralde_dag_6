---
import { useState } from 'react';

let formData = {
  firstName: '',
  lastName: '',
  email: '',
  dataDeleted: 0,
  termsAccepted: false,
  newsletter: false
};

function handleSubmit(event) {
  event.preventDefault();
  console.log('Form submitted:', formData);
}
---
<form onSubmit={handleSubmit} class="bg-white p-8 rounded-none max-w-md mx-auto border border-[#1100FF]">
    <h2 class="text-[#1100FF] text-[20px] md:text-[36px] text-center mb-4">
      REGISTRER DIT BIDRAG
    </h2>
    <p class="text-gray-600 text-center mb-6 text-sm md:text-lg">
      VENLIGST UDFYLD OPLYSNINGERNE NEDENFOR.
    </p>
  
    <input type="text" placeholder="FORNAVN" bind:value={formData.firstName} required 
      class="w-full p-4 mb-4 border border-[#1100FF] rounded-none focus:ring focus:ring-[#1100FF]" />
  
    <input type="text" placeholder="EFTERNAVN" bind:value={formData.lastName} required 
      class="w-full p-4 mb-4 border border-[#1100FF] rounded-none focus:ring focus:ring-[#1100FF]" />
  
    <input type="email" placeholder="EMAIL" bind:value={formData.email} required 
      class="w-full p-4 mb-4 border border-[#1100FF] rounded-none focus:ring focus:ring-[#1100FF]" />
  
    <div class="mb-6">
      <div class="relative">
        <input type="number" min="0" bind:value={formData.dataDeleted} 
          class="w-full p-4 pr-12 border border-[#1100FF] rounded-none focus:ring focus:ring-[#1100FF] placeholder:text-[#1100FF]" placeholder="MÃ†NGDE DATA SLETTET" />
        <span class="absolute right-4 top-1/2 transform -translate-y-1/2 text-[#1100FF]">GB</span>
      </div>
    </div>
  
    <div class="mb-6">
      <label class="flex items-center space-x-2">
        <input type="checkbox" bind:checked={formData.termsAccepted} required 
          class="w-5 h-5 text-[#1100FF] border-gray-300 rounded-none focus:ring focus:ring-[#1100FF] appearance-none border-2 checked:bg-[#1100FF] checked:border-transparent relative" />
        <span>Jeg accepterer betingelserne.</span>
      </label>
      <label class="flex items-center space-x-2 mt-4">
        <input type="checkbox" bind:checked={formData.newsletter} 
          class="w-5 h-5 text-[#1100FF] border-gray-300 rounded-none focus:ring focus:ring-[#1100FF] appearance-none border-2 checked:bg-[#1100FF] checked:border-transparent relative" />
        <span>Jeg vil gerne tilmelde mig nyhedsbrevet.</span>
      </label>
    </div>
  
    <button type="submit" 
      class="w-full bg-white text-[#1100FF] p-4 rounded-none border border-[#1100FF] transition 
             hover:bg-[#1100FF] hover:text-white active:scale-95 shadow-md 
             hover:shadow-lg active:shadow-sm">
      REGISTRER
    </button>
  </form>
  